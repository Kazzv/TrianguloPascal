def numero_perfecto (num):
    suma_divisores = 0
    for i in range(1, num):
        if num % i == 0:
            suma_divisores += i
    return suma_divisores == num

num = int(input("Ingrese un numero para ver si es perfecto o no: "))

if numero_perfecto(num):
    print("Es un numero perfecto.")
else:
    print("No es un numero perfecto.")
